/* ── Dracula Theme Colors ─────────────────────────────── */
/* Background: #282a36, Current Line: #44475a, Foreground: #f8f8f2 */
/* Comment: #6272a4, Cyan: #8be9fd, Green: #50fa7b */
/* Orange: #ffb86c, Pink: #ff79c6, Purple: #bd93f9 */
/* Red: #ff5555, Yellow: #f1fa8c */

$dracula-bg: #282a36;
$dracula-bg-dark: #21222c;
$dracula-current: #44475a;
$dracula-fg: #f8f8f2;
$dracula-comment: #6272a4;
$dracula-cyan: #8be9fd;
$dracula-green: #50fa7b;
$dracula-orange: #ffb86c;
$dracula-pink: #ff79c6;
$dracula-purple: #bd93f9;
$dracula-red: #ff5555;
$dracula-yellow: #f1fa8c;

/* ── Global ──────────────────────────────────────────── */

Screen {
    background: $dracula-bg-dark;
    color: $dracula-fg;
}

/* ── App Layout ──────────────────────────────────────── */

#app-layout {
    width: 100%;
    height: 1fr;
}

/* ── Sidebar ─────────────────────────────────────────── */

#sidebar {
    width: 28;
    height: 100%;
    background: $dracula-bg;
    border-right: round $dracula-current;
    padding: 0;
}

#sidebar-title {
    padding: 1 2;
    color: $dracula-purple;
    text-style: bold;
    height: 3;
}

#sidebar-menu {
    height: auto;
    padding: 0 1;
}

.menu-item {
    padding: 0 2;
    height: 3;
    content-align-vertical: middle;
    color: $dracula-comment;
}

.menu-item:hover {
    background: $dracula-current;
    color: $dracula-fg;
}

.menu-item.active {
    background: $dracula-current;
    color: $dracula-purple;
    text-style: bold;
}

#sidebar-activity {
    dock: bottom;
    height: auto;
    max-height: 12;
    padding: 1;
    border-top: round $dracula-current;
}

#activity-title {
    color: $dracula-orange;
    height: 1;
    padding: 0 1;
}

#activity-content {
    padding: 1;
    height: auto;
    color: $dracula-comment;
}

/* ── Main Area ───────────────────────────────────────── */

#main-area {
    width: 1fr;
    height: 100%;
}

#page-title {
    height: 3;
    padding: 1 2;
    color: $dracula-fg;
    text-style: bold;
    border-bottom: round $dracula-current;
    background: $dracula-bg;
}

#content-area {
    width: 100%;
    height: 1fr;
    padding: 1;
}

/* ── Tree View ───────────────────────────────────────── */

Tree {
    background: transparent;
    padding: 0 1;
    scrollbar-color: $dracula-current;
    scrollbar-color-hover: $dracula-comment;
    scrollbar-color-active: $dracula-purple;
}

Tree > .tree--guides {
    color: $dracula-comment;
}

Tree > .tree--cursor {
    background: $dracula-current;
    color: $dracula-fg;
    text-style: bold;
}

Tree > .tree--highlight {
    background: $dracula-current;
}

Tree > .tree--highlight-line {
    background: $dracula-current 30%;
}

/* ── Forms ────────────────────────────────────────────── */

Label {
    margin-top: 1;
    color: $dracula-purple;
}

Input {
    width: 100%;
    border: round $dracula-current;
    background: $dracula-bg;
    color: $dracula-fg;
}

Input:focus {
    border: round $dracula-purple;
}

TextArea {
    width: 100%;
    height: 6;
    border: round $dracula-current;
    background: $dracula-bg;
}

TextArea:focus {
    border: round $dracula-purple;
}

Select {
    width: 100%;
}

SelectCurrent {
    border: round $dracula-current;
    background: $dracula-bg;
}

SelectCurrent:focus {
    border: round $dracula-purple;
}

.form-buttons {
    margin-top: 2;
    layout: horizontal;
    height: auto;
}

.form-buttons Button {
    margin: 0 1;
}

Button {
    border: round $dracula-current;
}

Button.-primary {
    background: $dracula-purple;
    color: $dracula-fg;
    border: round $dracula-purple;
}

Button.-primary:hover {
    background: $dracula-pink;
    border: round $dracula-pink;
}

Button.-error {
    background: $dracula-red 30%;
    color: $dracula-red;
    border: round $dracula-red 50%;
}

Button.-success {
    background: $dracula-green 30%;
    color: $dracula-green;
    border: round $dracula-green 50%;
}

/* ── Chat ─────────────────────────────────────────────── */

#chat-log {
    width: 100%;
    height: 1fr;
    padding: 1 2;
    border: round $dracula-current;
    background: $dracula-bg;
    scrollbar-color: $dracula-current;
    scrollbar-color-hover: $dracula-comment;
    scrollbar-color-active: $dracula-purple;
}

#chat-input-bar {
    dock: bottom;
    height: auto;
    padding: 1 0;
}

#chat-input {
    width: 1fr;
}

#chat-send {
    width: auto;
    margin-left: 1;
}

/* ── Footer ──────────────────────────────────────────── */

Footer {
    background: $dracula-bg;
    color: $dracula-comment;
}

Footer > .footer--key {
    background: $dracula-current;
    color: $dracula-purple;
}

Footer > .footer--description {
    color: $dracula-fg;
}
