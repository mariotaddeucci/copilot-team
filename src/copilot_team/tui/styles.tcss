/* ── Monokai Theme Colors ─────────────────────────────── */
/* Background: #272822, Current Line: #3E3D32, Foreground: #F8F8F2 */
/* Comment: #75715E, Cyan: #66D9EF, Green: #A6E22E */
/* Orange: #FD971F, Pink: #F92672, Purple: #AE81FF */
/* Red: #F92672, Yellow: #E6DB74 */

$monokai-bg: #272822;
$monokai-bg-dark: #1E1F1C;
$monokai-current: #3E3D32;
$monokai-fg: #F8F8F2;
$monokai-comment: #75715E;
$monokai-cyan: #66D9EF;
$monokai-green: #A6E22E;
$monokai-orange: #FD971F;
$monokai-pink: #F92672;
$monokai-purple: #AE81FF;
$monokai-red: #F92672;
$monokai-yellow: #E6DB74;

/* ── Global ──────────────────────────────────────────── */

Screen {
    background: $monokai-bg-dark;
    color: $monokai-fg;
}

/* ── App Layout ──────────────────────────────────────── */

#app-layout {
    width: 100%;
    height: 1fr;
}

/* ── Sidebar ─────────────────────────────────────────── */

#sidebar {
    width: 22;
    height: 100%;
    background: #1B1C18;
    border-right: solid #2E2F2A;
    padding: 1 0 0 0;
}

#sidebar-menu {
    height: auto;
    padding: 0;
}

.menu-item {
    padding: 0 1;
    height: 2;
    color: $monokai-comment;
}

.menu-item:hover {
    background: $monokai-current;
    color: $monokai-fg;
}

.menu-item.active {
    background: $monokai-current;
    color: $monokai-purple;
    text-style: bold;
}

#sidebar-activity {
    dock: bottom;
    height: auto;
    max-height: 10;
    padding: 1 0;
    border-top: solid #2E2F2A;
}

#activity-title {
    color: $monokai-comment;
    height: 1;
    padding: 0 1;
}

#activity-content {
    padding: 0 1;
    height: auto;
    color: $monokai-comment;
}

/* ── Content Area ────────────────────────────────────── */

#content-area {
    width: 1fr;
    height: 1fr;
    padding: 0;
    overflow: hidden;
}

/* ── Tree View ───────────────────────────────────────── */

#tree-toolbar {
    height: 3;
    padding: 0 2;
    align: right middle;
    background: $monokai-bg-dark;
}

#tree-spacer {
    width: 1fr;
    height: 1;
}

#tree-toolbar Button {
    min-width: 12;
    height: 1;
    margin: 0 0 0 1;
    background: $monokai-green;
    color: $monokai-bg-dark;
    border: none;
    text-style: bold;
    content-align: center middle;
}

#tree-toolbar Button:hover {
    background: $monokai-cyan;
    color: $monokai-bg-dark;
}

#table-header {
    height: 1;
    padding: 0 0;
    background: $monokai-current;
    color: $monokai-purple;
    text-style: bold;
}

#stories-tree {
    height: 1fr;
    width: 100%;
    background: $monokai-bg-dark;
    padding: 0;
    scrollbar-color: $monokai-current;
    scrollbar-color-hover: $monokai-comment;
    scrollbar-color-active: $monokai-purple;
}

.story-header {
    height: 1;
    padding: 0 0;
    color: $monokai-fg;
    background: #272822;
}

.story-header:hover {
    background: $monokai-current;
}

.task-row {
    height: 1;
    padding: 0 0;
    color: $monokai-fg;
    background: transparent;
}

.task-row:hover {
    background: #2E2F2A;
}

.checklist-tree-row {
    height: 1;
    padding: 0 0;
    color: $monokai-comment;
    background: transparent;
}

.checklist-tree-row:hover {
    background: #2E2F2A;
}

/* ── Forms ────────────────────────────────────────────── */

Label {
    margin-top: 1;
    color: $monokai-comment;
}

Input {
    width: 100%;
    border: round $monokai-current;
    background: $monokai-bg;
    color: $monokai-fg;
}

Input:focus {
    border: round $monokai-purple;
}

TextArea {
    width: 100%;
    height: 5;
    border: round $monokai-current;
    background: $monokai-bg;
}

TextArea:focus {
    border: round $monokai-purple;
}

Select {
    width: 100%;
}

SelectCurrent {
    border: round $monokai-current;
    background: $monokai-bg;
}

SelectCurrent:focus {
    border: round $monokai-purple;
}

.form-buttons {
    margin-top: 1;
    layout: horizontal;
    height: auto;
}

.form-buttons Button {
    margin: 0 1;
}

/* ── Checklist Editor ────────────────────────────────── */

#checklist-container {
    height: auto;
    max-height: 10;
    padding: 0;
}

.checklist-row {
    height: 1;
    padding: 0;
    layout: horizontal;
}

.checklist-row Checkbox {
    width: 1fr;
    height: 1;
    padding: 0;
    border: none;
    background: transparent;
}

.checklist-delete {
    width: 5;
    min-width: 5;
    height: 1;
    background: $monokai-red 20%;
    color: $monokai-red;
    border: none;
}

#checklist-add-bar {
    height: auto;
    padding: 0;
    layout: horizontal;
}

#checklist-new-input {
    width: 1fr;
}

#checklist-add-bar Button {
    width: auto;
    margin-left: 1;
}

Button {
    border: none;
    content-align: center middle;
    min-width: 10;
}

Button.-primary {
    background: $monokai-green;
    color: $monokai-bg-dark;
    text-style: bold;
    content-align: center middle;
}

Button.-primary:hover {
    background: $monokai-cyan;
    color: $monokai-bg-dark;
}

Button.-error {
    background: $monokai-current;
    color: $monokai-comment;
}

Button.-error:hover {
    background: $monokai-red 40%;
    color: $monokai-red;
}

Button.-success {
    background: $monokai-green;
    color: $monokai-bg-dark;
    text-style: bold;
    content-align: center middle;
}

Button.-success:hover {
    background: $monokai-cyan;
    color: $monokai-bg-dark;
}

/* ── Chat ─────────────────────────────────────────────── */

#chat-log {
    width: 100%;
    height: 1fr;
    padding: 1 2;
    border: round $monokai-current;
    background: $monokai-bg;
    scrollbar-color: $monokai-current;
    scrollbar-color-hover: $monokai-comment;
    scrollbar-color-active: $monokai-purple;
}

#chat-input-bar {
    dock: bottom;
    height: auto;
    padding: 1 0;
}

#chat-input {
    width: 1fr;
}

#chat-send {
    width: auto;
    margin-left: 1;
}

/* ── Footer ──────────────────────────────────────────── */

Footer {
    background: $monokai-bg;
    color: $monokai-comment;
}

Footer > .footer--key {
    background: $monokai-current;
    color: $monokai-purple;
}

Footer > .footer--description {
    color: $monokai-fg;
}
